{
    "ci": {
        "collect": {
            "settings": {
                "onlyCategories": [
                    "performance"
                ],
                "chromeFlags": "--headless --no-sandbox --disable-gpu --disable-dev-shm-usage"
            }
        },
        "assert": {
            "assertions": {
                "categories:performance": [
                    "error",
                    {
                        "minScore": 0.9
                    }
                ],
                "uses-http2": "warn",
                "uses-long-cache-ttl": "warn"
            }
        }
    }
}